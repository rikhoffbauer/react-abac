{
    "name": "react-abac",
    "version": "0.1.342",
    "description": "Attribute Based Access Control and Role Based Access Control for React",
    "keywords": [
        "abac",
        "rbac",
        "react",
        "typescript"
    ],
    "bugs": {
        "url": "https://github.com/rikhoffbauer/react-abac/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jewetnitg/react-abac.git"
    },
    "license": "ISC",
    "author": "Rik Hoffbauer",
    "main": "dist/index.js",
    "module": "dist/index.es.js",
    "jsnext:main": "dist/index.es.js",
    "type": "module",
    "types": "dist/index.d.ts",
    "typings": "./dist/index.d.ts",
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "fmt": "tools/fmt",
        "test": "jest --coverage",
        "prebuild": "rimraf dist",
        "build": "rollup -c",
        "build:watch": "tsc --watch",
        "semantic-release": "semantic-release",
        "prestart": "sh link-to-example.sh",
        "start": "rollup -c -w",
        "start:prod": "node dist/main",
        "start:dev": "tsc-watch --onSuccess \"node dist/main.js\"",
        "start:debug": "tsc-watch --onSuccess \"node --inspect-brk dist/main.js\"",
        "prepublish": "pnpm run build"
    },
    "husky": {
        "skipCI": false,
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,md,json,yml,yaml,bash,sh,zsh,xml,iml,html,css,scss}": [
            "prettier --loglevel warn --write"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "prettier": {
        "arrowParens": "avoid",
        "endOfLine": "lf",
        "plugins": [
            "prettier-plugin-sh",
            "@prettier/plugin-xml",
            "prettier-plugin-import-sort"
        ],
        "printWidth": 80,
        "tabWidth": 4,
        "trailingComma": "all",
        "overrides": [
            {
                "files": "*.md",
                "options": {
                    "parser": "markdown",
                    "printWidth": 70,
                    "proseWrap": "never",
                    "trailingComma": "none",
                    "useTabs": false
                }
            },
            {
                "files": [
                    "*.json"
                ],
                "options": {
                    "parser": "json",
                    "quoteProps": "consistent",
                    "singleQuote": false,
                    "tabWidth": 4,
                    "trailingComma": "none"
                }
            },
            {
                "files": [
                    "*.bash",
                    "*.sh",
                    "*.zsh",
                    "tools/*"
                ],
                "options": {
                    "parser": "sh"
                }
            },
            {
                "files": [
                    "*.xml",
                    "*.iml"
                ],
                "options": {
                    "parser": "xml",
                    "printWidth": 80,
                    "tabWidth": 4,
                    "xmlWhitespaceSensitivity": "strict"
                }
            }
        ]
    },
    "jest": {
        "collectCoverageFrom": [
            "**/*.(t|j)sx?"
        ],
        "coverageDirectory": "./coverage",
        "moduleFileExtensions": [
            "js",
            "json",
            "ts",
            "tsx"
        ],
        "moduleNameMapper": {
            "~/(.*)": "<rootDir>/src/$1"
        },
        "preset": "ts-jest",
        "rootDir": ".",
        "setupFiles": [
            "<rootDir>/test/setupTests.ts"
        ],
        "testEnvironment": "<rootDir>/test/testEnvironment.js",
        "testRegex": "(.*\\.(spec))\\.(ts|tsx|js)$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        }
    },
    "devDependencies": {
        "@commitlint/cli": "19.8.0",
        "@commitlint/config-conventional": "19.8.0",
        "@prettier/plugin-xml": "3.4.1",
        "@semantic-release/changelog": "6.0.3",
        "@semantic-release/commit-analyzer": "13.0.1",
        "@semantic-release/git": "10.0.1",
        "@semantic-release/github": "11.0.1",
        "@semantic-release/release-notes-generator": "14.0.3",
        "@types/enzyme": "3.10.18",
        "@types/enzyme-adapter-react-16": "1.0.9",
        "@types/jest": "29.5.14",
        "@types/node": "22.14.0",
        "@types/react": "19.1.0",
        "@types/react-dom": "19.1.1",
        "@typescript-eslint/eslint-plugin": "8.29.0",
        "@typescript-eslint/parser": "8.29.0",
        "@wojtekmaj/enzyme-adapter-react-17": "0.8.0",
        "commitizen": "4.3.1",
        "cz-conventional-changelog": "3.3.0",
        "enzyme": "3.11.0",
        "enzyme-adapter-react-16": "1.15.8",
        "eslint": "9.23.0",
        "eslint-config-prettier": "10.1.1",
        "eslint-plugin-prettier": "5.2.6",
        "husky": "9.1.7",
        "import-sort": "6.0.0",
        "import-sort-parser-typescript": "6.0.0",
        "import-sort-style-custom": "2.1.2",
        "import-sort-style-module": "6.0.0",
        "jest": "29.7.0",
        "jest-cli": "29.7.0",
        "jest-environment-jsdom": "29.7.0",
        "jest-environment-jsdom-global": "4.0.0",
        "lint-staged": "15.5.0",
        "prettier": "3.5.3",
        "prettier-plugin-import-sort": "0.0.7",
        "prettier-plugin-sh": "0.16.0",
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "rimraf": "6.0.1",
        "rollup": "4.39.0",
        "rollup-plugin-commonjs": "10.1.0",
        "@rollup/plugin-node-resolve": "16.0.1",
        "rollup-plugin-peer-deps-external": "2.2.4",
        "rollup-plugin-sourcemaps": "0.6.3",
        "@rollup/plugin-terser": "0.4.4",
        "rollup-plugin-typescript2": "0.36.0",
        "rollup-plugin-uglify": "6.0.4",
        "rollup-plugin-url": "3.0.1",
        "semantic-release": "github:rikhoffbauer/semantic-release",
        "sort-package-json": "3.0.0",
        "ts-jest": "29.3.1",
        "ts-node": "10.9.2",
        "tsc-watch": "6.2.1",
        "tslib": "2.8.1",
        "typescript": "5.8.2"
    },
    "peerDependencies": {
        "react": "^16.8.1 || ^17.0.0 || ^18.0.0 || ^19.0.0"
    },
    "importSort": {
        ".js, .jsx, .es6, .es, .mjs": {
            "parser": "babylon",
            "style": "import-sort-style-custom"
        },
        ".ts, .tsx": {
            "parser": "typescript",
            "style": "import-sort-style-custom"
        }
    },
    "release": {
        "branches": [
            {
                "name": "main",
                "prerelease": false
            },
            {
                "name": "next",
                "prerelease": "beta",
                "channel": "next"
            }
        ],
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/npm",
            [
                "@semantic-release/changelog",
                {
                    "changelogFile": "CHANGELOG.md"
                }
            ],
            [
                "@semantic-release/github"
            ],
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "package.json",
                        "CHANGELOG.md"
                    ],
                    "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
                }
            ]
        ]
    },
    "wallaby": {
        "autoDetect": true,
        "runMode": "onsave"
    }
}
